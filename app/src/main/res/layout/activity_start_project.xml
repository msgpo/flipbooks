<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alittlescene.flipbooks.StartProject">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/videocamera"
        android:id="@+id/start_project_record_btn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#0000"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/film"
        android:id="@+id/start_project_select_video_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/start_project_record_btn"
        android:background="#0000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Record a video"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/start_project_record_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:shadowColor="#FFFFFF"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a video"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/start_project_select_video_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:shadowColor="#FFFFFF"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"/>
</RelativeLayout>
